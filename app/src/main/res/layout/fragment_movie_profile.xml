<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.siokagami.beansauce.search.fragment.MovieProfileFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:id="@+id/movie_profile_tw_countrues"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="1dp"
        android:textSize="18sp"
        android:padding="3dp"
        android:text="国家：***"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/movie_profile_tw_director"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="1dp"
        android:textSize="18sp"
        android:padding="3dp"
        android:text="导演：***"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/movie_profile_tw_casts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="1dp"
        android:textSize="18sp"
        android:padding="3dp"
        android:text="演员：***"
        android:textColor="@color/black"/>
    </LinearLayout>
</ScrollView>
