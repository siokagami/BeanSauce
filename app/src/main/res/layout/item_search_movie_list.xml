<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_search_movie_root"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/item_movie_pic"
        android:layout_width="120dp"
        android:layout_margin="8dp"
        android:scaleType="fitCenter"
        android:layout_height="150dp" />
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_movie_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="片名:***"
            android:textColor="@color/black"
            android:layout_margin="3dp"/>
        <TextView
            android:layout_below="@id/item_movie_title"
            android:id="@+id/item_movie_directors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="导演:***"
            android:textColor="@color/black"
            android:layout_margin="3dp"/>
        <TextView
            android:layout_below="@id/item_movie_directors"
            android:id="@+id/item_movie_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="年份:***"
            android:textColor="@color/black"
            android:layout_margin="3dp"/>
        <TextView
            android:layout_below="@id/item_movie_year"
            android:id="@+id/item_movie_casts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="主演:***"
            android:textColor="@color/black"
            android:layout_margin="3dp"/>
        <TextView
            android:layout_below="@+id/item_movie_casts"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:id="@+id/item_movie_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="评分:***"
            android:textSize="18sp"
            android:textColor="@color/application_base_color"
            android:layout_margin="3dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/application_base_color"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>


</LinearLayout>