<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_search_book_root"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/item_book_pic"
        android:layout_width="90dp"
        android:layout_margin="8dp"
        android:scaleType="fitCenter"
        android:layout_height="120dp" />
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_book_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="书名:***"
            android:textColor="@color/black"
            android:layout_margin="3dp"/>
        <TextView
            android:layout_below="@id/item_book_title"
            android:id="@+id/item_book_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="作者:***"
            android:textColor="@color/black"
            android:layout_margin="3dp"/>
        <TextView
            android:layout_below="@id/item_book_author"
            android:id="@+id/item_book_publisher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="出版社:***"
            android:textColor="@color/black"
            android:layout_margin="3dp"/>
        <TextView
            android:layout_below="@id/item_book_publisher"
            android:id="@+id/item_book_pubdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="出版时间:***"
            android:textColor="@color/black"
            android:layout_margin="3dp"/>
        <TextView
            android:layout_below="@+id/item_book_pubdate"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:id="@+id/item_book_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="价格:***"
            android:textSize="18sp"
            android:textColor="@color/application_base_color"
            android:layout_margin="3dp"/>
    </RelativeLayout>

</LinearLayout>