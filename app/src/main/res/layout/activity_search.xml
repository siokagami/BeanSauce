<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.siokagami.beansauce.search.activity.SearchActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/application_base_color"
        android:gravity="center"
        android:padding="6dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_w_logo"/>
        <EditText
            android:id="@+id/search_edittext_keyword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_ed_bg"
            android:padding="6dp"
            android:textColor="@color/white"
            android:layout_margin="6dp"
            android:singleLine="true"
            android:textSize="20sp"
            android:imeOptions="actionSearch"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/search_layout_book"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/search_tw_book"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/application_base_color"
                android:text="图书"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/search_layout_music"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/search_tw_music"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#999999"
                android:text="音乐"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/search_layout_movie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/search_tw_movie"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#999999"
                android:text="电影"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/search_tab"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/application_base_color"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/search_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </android.support.v4.view.ViewPager>


</LinearLayout>
